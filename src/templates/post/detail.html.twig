{% extends 'base.html.twig' %}

{% block head %}
    <style>
        main {
            font-family: 'Arial', sans-serif;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f8f9fa;
            color: #333;
        }

        td {
            background-color: #ffffff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <h2>Détails de l'utilisateur</h2>
        <table>
            <tr>
                <th>Nom:</th>
                <td>{{ nom }}</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>{{ email }}</td>
            </tr>
            <tr>
                <th>Message:</th>
                <td>{{ message }}</td>
            </tr>
            <tr>
                <th>Ville:</th>
                <td>{{ ville }}</td>
            </tr>
            <tr>
                <th>Âge:</th>
                <td>{{ age }}</td>
            </tr>
        </table>
    </main>
{% endblock %}
